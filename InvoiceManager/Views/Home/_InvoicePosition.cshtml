@model System.Collections.Generic.ICollection<InvoiceManager.Models.Domains.InvoicePosition>

<div class="row">
    <h2>Invoice Positions</h2>
    
    <table class="table table-hover table-striped mt-3 mb-5">
        <thead>
        <tr>
            <th scole="col">Lp</th>
            <th scole="col">Produkt</th>
            <th scole="col">Ilość</th>
            <th scole="col"></th>
            <th scole="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var position in Model)
        {
            <tr>
                <td> 
                    <a class="font-weight-bold"
                       href="window.location.href=
                           `@Url.Action("InvoicePosition", "Home", new { invoiceId = position.InvoiceId, invoicePositionId = position.Id })`">
                        @position.No
                    </a>
                </td>
                <td>@position.Product.Name</td>
                <td>@position.Quantity</td>
                <td>@position.Value</td>
                <td>
                    <button class="btn btn-danger btn-sm" onclick="deleteInvoicePosition()">
                        Remove
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        function deleteInvoicePosition() {
            if (!confirm("Are you sure you want to remove the invoice?")) {
                return;
            }
        }
    </script>
}